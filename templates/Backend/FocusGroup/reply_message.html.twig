{% extends 'Backend/_layout.html.twig' %}

{% block page_title %}
    <h3 class="page-title"> Focus Group
        <small>répondre à un message</small>
    </h3>
{% endblock %}

{% block content %}
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <span class="caption-subject font-red-sunglo bold uppercase">Réponse</span>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(reply_form, {'attr' : {
                'class' : 'form-horizontal'
            }}) }}
            <div class="form-body">
                <div class="form-group">
                    {{ form_label(reply_form.content, null, {'label': 'Message', 'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-10">
                        {{ form_widget(reply_form.content, {'attr': {'class': 'form-control', 'placeholder' : 'Message'}}) }}
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-4">
                        <button class="btn green" type="submit">Enregistrer</button>
                        <a class="btn default" href="{{ path('backend_focusgroup_show', {id: focusMessage.focusGroup.id}) }}">Retour</a>
                    </div>
                </div>
            </div>
            {{ form_end(reply_form) }}
        </div>
    </div>
{% endblock %}
