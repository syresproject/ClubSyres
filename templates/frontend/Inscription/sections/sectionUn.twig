<div class="tab">
    <hr id="add">
    <div class="styleCard">
        <fieldset>
            <div style="text-align: left">
                <div class="d_flex">
                    <div class="col-left">
                        {{ form_row(formInscription.nomAddresse) }}
                    </div>

                    <div class="col-right">
                        {{ form_row(formInscription.apptEtageCouloir) }}
