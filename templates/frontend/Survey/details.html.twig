{% extends "frontend/_layout_details.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .survey {
            display: flex;
            margin: 20px 0;
            height: 100px;
            box-shadow:0 2px 36px rgba(0,0,100,.15), 0 0 1px rgba(0,0,100,.15);
            transition:.3s;
            border-radius: 10px;
            text-align: center;
        }

        .pasOuvert{
            box-shadow: 0 1px 1px rgba(0,0,100,.25), 0 0 rgba(0,0,100,.25);
            border-radius: 10px;
            margin-bottom: 10px;
        }

        .pPas{
            font-size: 18px !important;
            margin-top: 13px !important;
            text-align: center;
            color: #03363D;
            letter-spacing: 2px;
            text-transform: uppercase;
        }
        .numberL{
            text-shadow: 1px 0px 0.5px rgba(0,0,100,.15);
            color: #03363D !important;
            font-size: 3em !important;
            /* font-weight: 800 !important; */
            line-height: 64px;
        }
    </style>
{% endblock %}

